@model Organi.Za.Organizaciju.Data.PotrebnoZanimanje

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Potrebno Zanimanje</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UslugaId" class="control-label">Odabrana usluga (nije moguće mijenjati)</label>
                <input asp-for="UslugaId" hidden="hidden" value="@ViewData["UslugaId"]"/>
                <span class="form-control disabled" >@ViewData["NazivUsluge"]</span>
                <span asp-validation-for="UslugaId" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="ZanimanjeId" class="control-label"></label>
                <select asp-for="ZanimanjeId" class ="form-control" asp-items="ViewBag.ZanimanjeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Broj" class="control-label"></label>
                <input asp-for="Broj" class="form-control" />
                <span asp-validation-for="Broj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@ViewData["UslugaId"]">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
