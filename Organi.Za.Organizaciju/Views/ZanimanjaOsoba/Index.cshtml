@model ReflectionIT.Mvc.Paging.PagingList<Organi.Za.Organizaciju.Data.ZanimanjaOsobe>
@using ReflectionIT.Mvc.Paging
@addTagHelper *, ReflectionIT.Mvc.Paging

@{
    ViewData["Title"] = "Index";
}

<h1>Zanimanja osobe</h1>

<p>
    <a asp-action="Create">Dodaj novo zanimanje</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Zanimanje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Osoba)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Zanimanje.Naziv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Osoba.Ime) &nbsp;
                    @Html.DisplayFor(modelItem => item.Osoba.Prezime)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Uredi</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalji</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Izbriši</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<nav aria-label="ZanimanjaOsoba">
    @await Component.InvokeAsync("Pager", new { pagingList = Model })
</nav>
