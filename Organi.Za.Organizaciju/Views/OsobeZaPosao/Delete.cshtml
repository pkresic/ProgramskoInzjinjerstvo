@model Organi.Za.Organizaciju.Data.DodijeljeneOsobe

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>DodijeljeneOsobe</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Osoba)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Osoba.Ime) &nbsp;
            @Html.DisplayFor(model => model.Osoba.Prezime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Posao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Posao.Naziv)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-route-id="@Model.PosaoId" asp-action="Index">Nazad</a>
    </form>
</div>
