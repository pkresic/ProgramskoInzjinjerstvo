@model Organi.Za.Organizaciju.Data.PotrebnaOprema

@{
    ViewData["Title"] = "Create";
}

<h1>Dodaj</h1>

<h4>Novi tip oprema za uslugu: <strong>@ViewData["NazivUsluge"]</strong></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UslugaId" class="control-label">Odabrana usluga (nije moguće mijenjati)</label>
                <input asp-for="UslugaId" hidden="hidden" value="@ViewData["UslugaId"]"/>
                <span class="form-control disabled" >@ViewData["NazivUsluge"]</span>
                <span asp-validation-for="UslugaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpremaId" class="control-label">Oprema</label>
                <select asp-for="OpremaId" class ="form-control" asp-items="ViewBag.OpremaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Kolicina" class="control-label"></label>
                <input asp-for="Kolicina" class="form-control" />
                <span asp-validation-for="Kolicina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-route-id="@ViewData["UslugaId"]" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
