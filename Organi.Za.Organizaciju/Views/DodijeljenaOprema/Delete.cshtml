@model Organi.Za.Organizaciju.Data.DodijeljenaOprema

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.Oprema.Naziv za posao: <strong>@Model.Posao.Naziv</strong></h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Oprema)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Oprema.Naziv)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BrojOpreme)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BrojOpreme)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Posao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Posao.Naziv)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-route-id="@Model.PosaoId" asp-action="Index">Nazad</a>
    </form>
</div>
