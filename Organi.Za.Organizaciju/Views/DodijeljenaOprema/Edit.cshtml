@model Organi.Za.Organizaciju.Data.DodijeljenaOprema

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>DodijeljenaOprema</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PosaoId" class="control-label">Odabrani posao (nije moguće mijenjati)</label>
                <input asp-for="PosaoId" hidden="hidden" value="@ViewData["PosaoId"]" />
                <span class="form-control disabled">@ViewData["NazivPosla"]</span>
                <span asp-validation-for="PosaoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpremaId" class="control-label"></label>
                <select asp-for="OpremaId" class="form-control" asp-items="ViewBag.OpremaId"></select>
                <span asp-validation-for="OpremaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrojOpreme" class="control-label"></label>
                <input asp-for="BrojOpreme" class="form-control" />
                <span asp-validation-for="BrojOpreme" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-route-id="@Model.PosaoId" asp-action="Index">Nazad</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
