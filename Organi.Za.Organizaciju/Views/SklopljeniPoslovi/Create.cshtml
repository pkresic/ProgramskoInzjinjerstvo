@model Organi.Za.Organizaciju.Data.SklopljeniPosao

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>SklopljeniPosao</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @{
                if (ViewData["PonudaId"] != null)
                {
                    <div class="form-group">
                        <label asp-for="PonudaId" class="control-label">Odabrana ponuda (nije moguće mijenjati)</label>
                        <input asp-for="PonudaId" hidden="hidden" value="@ViewData["PonudaId"]"/>
                        <span class="form-control disabled" >@ViewData["NazivPonude"]</span>
                        <span asp-validation-for="PonudaId" class="text-danger"></span>
                    </div>
                }
                else
                {
                    <div class="form-group">
                        <label asp-for="UslugaId" class="control-label"></label>
                        <select asp-for="UslugaId" class="form-control" asp-items="ViewBag.UslugaId"></select>
                        <span asp-validation-for="UslugaId" class="text-danger"></span>
                    </div>
                }
            }
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <input asp-for="Opis" class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
         
            <div class="form-group">
                <label asp-for="VrijemeRadaOd" class="control-label"></label>
                <input asp-for="VrijemeRadaOd" class="form-control" />
                <span asp-validation-for="VrijemeRadaOd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VrijemeRadaDo" class="control-label"></label>
                <input asp-for="VrijemeRadaDo" class="form-control" />
                <span asp-validation-for="VrijemeRadaDo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LokacijaId" class="control-label"></label>
                <select asp-for="LokacijaId" class ="form-control" asp-items="ViewBag.LokacijaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DogovorenaCijena" class="control-label"></label>
                <input asp-for="DogovorenaCijena" class="form-control" />
                <span asp-validation-for="DogovorenaCijena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
